{
  "name": "iperf3-web",
  "version": "1.0.0",
  "description": "Containerized iPerf3 with auto-discovery and web interface",
  "main": "src/server/index.ts",
  "type": "module",
  "scripts": {
    "start": "tsx src/server/index.ts",
    "dev": "nodemon --exec tsx src/server/index.ts",
    "test": "npm run test:unit && npm run test:playwright",
    "test:unit": "node --experimental-strip-types --test tests/unit/**/*.test.ts",
    "test:playwright": "playwright test tests/playwright",
    "lint": "eslint src/ tests/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "bonjour-service": "^1.2.1",
    "ws": "^8.14.2",
    "cors": "^2.8.5",
    "uuid": "^9.0.1",
    "tsx": "^4.7.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "@playwright/test": "^1.40.1",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0"
  },
  "keywords": ["iperf3", "network", "testing", "docker", "autodiscovery", "typescript"],
  "author": "iPerf3 Web Container",
  "license": "MIT"
}